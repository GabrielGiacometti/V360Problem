<%= stylesheet_link_tag "index", "data-turbo-track": "reload" %>
<%= stylesheet_link_tag "create-task", "data-turbo-track": "reload" %>

<div class= "list_main_task">
  <p style="color: green"><%= notice %></p>
  <div class= "page_title">
    <h1 >TO-DO-LIST</h1>
    <%= link_to "New task", new_task_path,data:{turbo_frame: dom_id(Task.new)} %>
    <%= link_to 'Delete All Tasks', destroy_all_tasks_path, data: { turbo_method: 'delete', turbo_confirm: "do you really want to delete all the tasks?" }  %>
    <div class ="form">
      <%= turbo_frame_tag Task.new%>
    </div>
  </div>
  <%= turbo_frame_tag "task" do%>
  <div id="tasks" class="container">
    <% if !Task.count.zero? %>
        <%= render @tasks%>
      <%end%>
  </div>
  <% end %>
</div>