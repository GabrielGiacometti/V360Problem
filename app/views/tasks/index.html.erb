  <div class= "page_title">
  <h1 >TO-DO-LIST</h1>
  <%= link_to "New task", new_task_path %>
  </div>
  <div id="tasks" class="container">
    <% @tasks.each do |task| %>
      <%= render task %>
    <% end %>
  </div>
</div>