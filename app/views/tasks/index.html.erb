<%= stylesheet_link_tag "index", "data-turbo-track": "reload" %>
<div class= "list_main_task">
  <p style="color: green"><%= notice %></p>
  
  <h1 class= "page_title">TO-DO-LIST</h1>

  <div id="tasks">
    <% @tasks.each do |task| %>
      <%= render task %>
    
     
        <%= link_to "Show this task", task %>
      
    <% end %>
 
  </div>

  <%= link_to "New task", new_task_path %>
</div>